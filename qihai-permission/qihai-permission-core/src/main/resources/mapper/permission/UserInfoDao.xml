<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qihai.permission.dao.UserInfoDao">

	<!-- 可根据自己的需求，是否要使用 -->
	<resultMap type="com.qihai.permission.entity.UserInfoEntity"
		id="userInfoMap">
		<result property="id" column="id" />
		<result property="parentId" column="parent_id" />
		<result property="userName" column="user_name" />
		<result property="password" column="password" />
		<result property="mobile" column="mobile" />
		<result property="type" column="type" />
		<result property="enabledFlag" column="enabled_flag" />
		<result property="traceId" column="trace_id" />
		<result property="createdBy" column="created_by" />
		<result property="createTime" column="create_time" />
		<result property="updatedBy" column="updated_by" />
		<result property="updateTime" column="update_time" />
		<result property="status" column="status" />
		<result property="registTime" column="regist_time" />
		<result property="fromSource" column="from_source" />
		<result property="delFlag" column="del_flag" />
		<result property="remarks" column="remarks" />
	</resultMap>

	<resultMap type="com.qihai.permission.dto.UserRoleDTO" id="userRole">
		<result property="id" column="id"/>
		<result property="roleCode" column="role_code" />
		<result property="roleName" column="role_name" />
		<result property="dataRangeName" column="data_range_name" />
		<result property="createTime" column="create_time" />
	</resultMap>

	<select id="listUserRole" resultMap="userRole">
		SELECT
			b.id,
			d.role_code,
			d.role_name,
			c.data_range_name,
			b.create_time
		FROM
			user_info a,
			auth_user_role b,
			auth_data_range c,
			auth_role d
		WHERE
		b.user_id = a.id
		AND b.data_range_id = c.id
		AND b.role_id = d.id
		<if test="userId!=null">
			and b.user_id=#{userId}
		</if>
	</select>

</mapper>